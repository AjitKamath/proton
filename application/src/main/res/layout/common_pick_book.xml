<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_pick_book_ll"
    android:layout_width="@dimen/pick_book_image_width"
    android:layout_height="@dimen/pick_book_image_height"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        card_view:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp">

        <LinearLayout
            android:background="@color/appBackgroundLight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/common_pick_book_iv"
                android:layout_width="@dimen/pick_book_image_width"
                android:layout_height="@dimen/pick_book_image_height"
                android:layout_gravity="center"
                android:background="@drawable/book_check"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/common_pick_no_book_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/books" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BOOK COVER"
                    android:textColor="@color/textLightTertiary"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>