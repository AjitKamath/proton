<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/common_fragment_header"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/common_pick_book"
        layout="@layout/common_pick_book" />

    <EditText
        android:id="@+id/share_title_et"
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text_border_dark"
        android:gravity="center"
        android:hint="BOOK TITLE"
        android:textAllCaps="true"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/share_author_et"
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_border_dark"
        android:gravity="center"
        android:hint="BY AUTHOR"
        android:textAllCaps="true"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:padding="5dp"
        android:textSize="12sp" />

</LinearLayout>