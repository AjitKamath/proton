<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/common_amount"
        layout="@layout/common_amount" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SPECIFY THE RENT PER MIN. RENTAL DURATION"
        android:textSize="7sp"
        android:gravity="center"
        android:textColor="@color/textLightTertiary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIN. RENTAL DURATION"
            android:textSize="10sp"
            android:textColor="@color/black"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/common_spinner_category"
            layout="@layout/common_spinner" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A BOOK SEEKER SHOULD RENT YOUR BOOK FOR AT LEAST THIS DURATION"
        android:textSize="7sp"
        android:textColor="@color/textLightTertiary"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIN. RENTAL DURATION"
            android:textSize="10sp"
            android:textColor="@color/black"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/common_spinner_category"
            layout="@layout/common_spinner" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A BOOK SEEKER CAN RENT YOUR BOOK FOR AT MOST THIS DURATION"
        android:textSize="7sp"
        android:gravity="center"
        android:textColor="@color/textLightTertiary"/>

</LinearLayout>