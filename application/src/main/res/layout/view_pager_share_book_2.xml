<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORY"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/common_spinner_category"
            layout="@layout/common_spinner" />

    </LinearLayout>



    <EditText
        android:id="@+id/share_publisher_et"
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text_border_dark"
        android:gravity="center"
        android:hint="PUBLISHER"
        android:textAllCaps="true"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/share_description_et"
        android:layout_width="@dimen/form_fields_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_border_dark"
        android:gravity="center"
        android:hint="DESCRIBE THE BOOK"
        android:inputType="textAutoComplete|textAutoCorrect"
        android:padding="5dp"
        android:textSize="15sp" />

</LinearLayout>